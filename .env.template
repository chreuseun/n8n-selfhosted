# === SETUP INSTRUCTIONS ===
# 1. Copy this file to .env: cp .env.template .env
# 2. Replace all CHANGE_ME values with your actual values
# 3. Generate secure passwords: openssl rand -hex 16
# 4. Generate encryption key: openssl rand -hex 16
# 5. Make sure DB username/password match between n8n and postgres variables
# 6. Update domain name in N8N_HOST and WEBHOOK_URL
# 7. Run: docker-compose up -d

# =========================================================================
# === DATABASE CONFIG ===

# Tells n8n to use PostgreSQL instead of default SQLite
DB_TYPE=postgresdb

# Host where postgres is running - "postgres" is your docker service name
DB_POSTGRESDB_HOST=postgres

# Standard PostgreSQL port
DB_POSTGRESDB_PORT=5432

# Database schema - "public" is default
DB_POSTGRESDB_SCHEMA=public

# Credential - DB username
DB_POSTGRESDB_USER=CHANGE_ME
POSTGRES_USER=CHANGE_ME

# Credential - DB password (Generate with: openssl rand -hex 16)
DB_POSTGRESDB_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# Credential - DB name
DB_POSTGRESDB_DATABASE=n8n
POSTGRES_DB=n8n


# === N8N BASIC CONFIG ===
# Your domain name - n8n uses this for generating URLs
N8N_HOST=CHANGE_ME_YOUR_DOMAIN

# Internal port n8n runs on (inside container)
N8N_PORT=5678

# Protocol - "https" if you have reverse proxy with SSL, "http" for local
N8N_PROTOCOL=https

# === SECURITY & ENCRYPTION ===
# Key used to encrypt sensitive data in database (credentials, etc.)
# Generate with: openssl rand -hex 16
N8N_ENCRYPTION_KEY=CHANGE_ME_GENERATE_32_CHAR_KEY

# === USER MANAGEMENT ===
# Allow multiple users (false = multi-user, true = single user mode)
N8N_USER_MANAGEMENT_DISABLED=false

# How n8n sends emails (for user invites, password resets)
N8N_EMAIL_MODE=smtp

# === WEBHOOKS (Critical!) ===
# Base URL for webhooks - external services will call this
# Must match your actual domain exactly
WEBHOOK_URL=https://CHANGE_ME_YOUR_DOMAIN/

# === OPTIONAL: TIMEZONE ===
# Sets timezone for scheduled workflows
# Examples: UTC, America/New_York, Europe/London, Asia/Manila
GENERIC_TIMEZONE=UTC

# === ADDITIONAL SETTINGS ===
# Useful for debugging
N8N_LOG_LEVEL=info

# If you want to disable the hiring banner
N8N_HIRING_BANNER_ENABLED=false

# File permissions enforcement
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true


# Maximum payload size (in MB)
N8N_PAYLOAD_SIZE_MAX=250

# Maximum file size for form-data webhooks
N8N_FORMDATA_FILE_SIZE_MAX=250
